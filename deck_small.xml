<Template>
  <SetVariable name="group">[Channel<Variable name="channum"/>]</SetVariable>
  <WidgetGroup>
    <Size>0e,48f</Size>
    <Layout>horizontal</Layout>
    <Children>
      <WidgetGroup>
        <ObjectName>DeckSmallLeftBorder</ObjectName>
        <Size>5f,48f</Size>
      </WidgetGroup>

      <WidgetGroup>
        <ObjectName>DeckSmall</ObjectName>
        <Size>i,48f</Size>
        <Layout>horizontal</Layout>
        <Children>
          <WidgetGroup>
            <!-- TODO this needs to get smaller .... -->
            <!-- <Size>488min,38f</Size> -->
            <Size>488min,38f</Size>
            <Layout>horizontal</Layout>
            <Children>
              <SingletonContainer>
                <ObjectName>Overview<Variable name="channum"/></ObjectName>
              </SingletonContainer>

              <!-- <WidgetGroup>
                <Size>1f,38f</Size>
              </WidgetGroup> -->

              <WidgetGroup>
                <ObjectName>DeckSmall_TitleTimeKeyBPM</ObjectName>
                <Size>220me,38f</Size>
                <Layout>vertical</Layout>
                <Children>
                  <WidgetGroup>
                    <ObjectName>DeckSmall_TitleTime</ObjectName>
                    <Size>10me,19f</Size>
                    <Layout>horizontal</Layout>
                    <Style>
                      QLabel {
                        font-size: 13px;
                        font-weight: bold;
                        color: #191F24;
                        color: #eee;
                      }
                    </Style>
                    <Layout>horizontal</Layout>
                    <Children>

                      <NumberPos>
                        <TooltipId>track_time</TooltipId>
                        <Size>50min,19f</Size>
                        <Style>QLabel {
                          text-align: right;
                          padding: 3px 0px 2px 0px;
                          margin: 0px 0px 0px 0px;
                        }
                        </Style>
                        <Group><Variable name="group"/></Group>
                        <Alignment>right</Alignment>
                      </NumberPos>
                    </Children>
                  </WidgetGroup>

                  <!-- <TrackWidgetGroup>
                    <Size>0e,1f</Size>
                    <Group><Variable name="group"/></Group>
                    <TrackColorAlpha>255</TrackColorAlpha>
                  </TrackWidgetGroup> -->

                  <!-- Artist / Key /BPM -->
                  <WidgetGroup>
                    <Size>150me,18f</Size>
                    <Layout>horizontal</Layout>
                    <Style>
                      QLabel {
                        font-size: 13px;
                        font-weight: bold;
                        color: #191F24;
                        color: #eee;
                      }
                    </Style>
                    <Layout>vertical</Layout>
                    <Children>

                      <NumberBpm>
                        <TooltipId>visual_bpm</TooltipId>
                        <Size>42f,18f</Size>
                        <Style>QLabel {
                          padding: 3px 1px 3px 0px;
                        }
                        </Style>
                        <Channel><Variable name="channum"/></Channel>
                        <!--CSS alignments not respected see bug lp:605530 , lets call <Alignment>-->
                        <Alignment>center</Alignment>
                        <Connection>
                          <ConfigKey><Variable name="group"/>,visual_bpm</ConfigKey>
                        </Connection>
                      </NumberBpm>
                    </Children>
                  </WidgetGroup><!-- Artist / Key /BPM -->

                </Children>
              </WidgetGroup><!-- Title / Time // Artist / Key /BPM -->

              <!-- <WidgetGroup>
                <Size>1f,38f</Size>
                <BackPath>style/style_component_border.png</BackPath>
              </WidgetGroup> -->

              <!-- Play -->
              

            </Children>
          </WidgetGroup>
        </Children>
      </WidgetGroup>

      <WidgetGroup>
        <ObjectName>EffectRightBorder</ObjectName>
        <Size>5f,48f</Size>
        <!-- <BackPath>style/style_bg_deck_border.png</BackPath> -->
      </WidgetGroup>

    </Children>
  </WidgetGroup>
